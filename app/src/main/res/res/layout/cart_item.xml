<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="@dimen/_2sdp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_20sdp">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_253sdp"
            android:layout_height="@dimen/_114sdp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_10sdp"
            app:cardElevation="10dp">

            <TextView
                android:id="@+id/items_tv_nameProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|top"
                android:layout_marginStart="@dimen/_65sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="CLOTHING"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold" />


            <TextView

                android:id="@+id/items__details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginStart="@dimen/_70sdp"
                android:layout_marginTop="@dimen/_16sdp"

                android:layout_marginBottom="@dimen/_20sdp"
                android:text="color : "
                android:textSize="@dimen/_11ssp" />

            <ImageView
                android:id="@+id/items_img_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginStart="@dimen/_120sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:src="@drawable/ic_color_poing" />

            <TextView
                android:id="@+id/items_tv_totalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|bottom"
                android:layout_marginStart="@dimen/_80sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:text="22$"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="@dimen/_90sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/background_et"
                android:gravity="center"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/items__tv_subCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|bottom"
                    android:layout_weight="1"
                    android:gravity="center"

                    android:text="-"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_19ssp" />

                <TextView
                    android:id="@+id/items__tv_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|bottom"
                    android:layout_weight="1"

                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_19ssp" />

                <TextView
                    android:id="@+id/items__tv_addCount"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|bottom"
                    android:layout_weight="1"
                    android:gravity="center"

                    android:text="+"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_19ssp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </FrameLayout>

    <ImageView
        android:id="@+id/items_img_imageProduct"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_120sdp"
        android:layout_gravity="center|start"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="-30dp"
        android:src="@drawable/ss" />

    <ImageView
        android:id="@+id/items_img_cancelProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center"
        android:layout_marginTop="-40dp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:src="@drawable/ic_delete" />
</FrameLayout>