<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|end"
        android:layout_marginStart="@dimen/_40sdp"
        android:layout_marginEnd="@dimen/_10sdp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_114sdp"
            android:layout_margin="@dimen/_10sdp"
            app:cardElevation="10dp">

            <TextView
                android:id="@+id/items_tv_nameProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginEnd="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="CLOTHING"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold" />


            <TextView

                android:id="@+id/items__details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:text="color : "
                android:textSize="@dimen/_14ssp" />

            <ImageView
                android:id="@+id/items_img_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:src="@drawable/ic_color_poing" />

            <TextView
                android:id="@+id/items_tv_totalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_30sdp"

                android:layout_gravity="center|bottom"
                android:layout_marginBottom="@dimen/_20sdp"
                android:text="22$"
                android:textSize="@dimen/_19ssp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/item_img_buyProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_marginEnd="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:src="@drawable/cart" />
        </androidx.cardview.widget.CardView>

    </FrameLayout>

    <ImageView
        android:id="@+id/items_img_imageProduct"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_gravity="center|start"
        android:layout_marginStart="-30dp"
        android:layout_marginTop="-30dp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:src="@drawable/ss" />

</FrameLayout>