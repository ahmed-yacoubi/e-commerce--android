<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/category_frame_big"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

  >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_145sdp"
            android:layout_gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_272sdp"
                android:layout_height="@dimen/_115sdp"
                android:layout_gravity="center|bottom"
                android:layout_margin="@dimen/_10sdp"
                app:cardCornerRadius="13dp"
                app:cardElevation="10dp">

                <TextView
                    android:id="@+id/category_tv_nameB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:text="CLOTHING"
                    android:textSize="@dimen/_23ssp" />

            </androidx.cardview.widget.CardView>

        </FrameLayout>

        <ImageView
            android:id="@+id/category_img_categoryImageB"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"
            android:layout_gravity="center|end"
            android:layout_marginTop="-30dp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:src="@drawable/ss" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/category_frame_small2"
        android:layout_width="@dimen/_170sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_gravity="end"
        android:layout_weight="1">

        <FrameLayout

            android:layout_width="@dimen/_141sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"


            >

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_131sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_5sdp"
                app:cardElevation="10dp">

                <TextView
                    android:id="@+id/category_tv_nameS2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom|start"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_38sdp"
                    android:text="T-Sharit"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/category_tv_descS2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom|start"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_14sdp"
                    android:text="225.5$"

                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp" />


            </androidx.cardview.widget.CardView>

        </FrameLayout>

        <ImageView
            android:id="@+id/category_img_categoryImageS2"
            android:layout_width="@dimen/_85sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center"

            android:layout_marginTop="-40dp"
            android:src="@drawable/ss" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/category_frame_small1"
        android:layout_width="@dimen/_170sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_gravity="start"
        android:layout_weight="1">

        <FrameLayout
            android:layout_width="@dimen/_141sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_131sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_5sdp"
                app:cardElevation="10dp">

                <TextView
                    android:id="@+id/category_tv_nameS1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom|start"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_38sdp"
                    android:text="T-Sharit"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/category_tv_descS1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom|start"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_14sdp"
                    android:text="225.5$"

                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp" />


            </androidx.cardview.widget.CardView>

        </FrameLayout>

        <ImageView
            android:id="@+id/category_img_categoryImageS1"
            android:layout_width="@dimen/_85sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center"

            android:layout_marginTop="-40dp"
            android:src="@drawable/ss" />

    </FrameLayout>
</LinearLayout>