<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:layout_gravity="center|end">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_110sdp"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            app:cardElevation="10dp">

            <TextView
                android:id="@+id/items_tv_nameProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top|start"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="CLOTHING"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/items_tv_totalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center|bottom|start"
                android:layout_marginStart="@dimen/_45sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:text="22$"
                android:textSize="@dimen/_19ssp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/item_img_buyProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginEnd="-54dp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:src="@drawable/cart" />


        </androidx.cardview.widget.CardView>

    </FrameLayout>

    <ImageView
        android:id="@+id/items_img_imageProduct"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_gravity="center|end"
        android:layout_marginTop="-32dp"
        android:layout_marginEnd="-16dp"
        android:src="@drawable/ss" />

    <ImageView
        android:id="@+id/items_img_cancelProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|start"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="-50dp"
        android:src="@drawable/ic_delete" />

</FrameLayout>